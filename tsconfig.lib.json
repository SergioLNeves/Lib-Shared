{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "noEmit": false,
        "composite": false,
        "skipLibCheck": true
    },
    "include": [
        "src/index.ts",
        "src/components/**/*",
        "src/lib/**/*"
    ],
    "exclude": [
        "src/**/*.stories.ts",
        "src/**/*.stories.tsx",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/App.tsx",
        "src/main.tsx",
        "src/assets/**/*"
    ]
}