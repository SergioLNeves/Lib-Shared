{
  "name": "@sergiolneves/lib-shared",
  "private": false,
  "version": "0.1.0",
  "description": "Biblioteca de componentes React compartilhados com Tailwind CSS",
  "type": "module",
  "keywords": [
    "react",
    "components",
    "tailwindcss",
    "ui",
    "library"
  ],
  "author": "SergioLNeves",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SergioLNeves/Lib-Share.git"
  },
  "bin": {
    "lib-shared": "./cli.js"
  },
  "main": "./dist/lib-shared.umd.js",
  "module": "./dist/lib-shared.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/lib-shared.es.js",
      "require": "./dist/lib-shared.umd.js"
    },
    "./styles.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "cli.js",
    "registry"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "tsc --project tsconfig.lib.json && vite build --config vite.config.lib.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "pnpm run build:lib"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "^10.0.6",
    "@storybook/addon-docs": "^10.0.6",
    "@storybook/addon-vitest": "^10.0.6",
    "@storybook/react-vite": "^10.0.6",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react-swc": "^4.2.1",
    "@vitest/browser-playwright": "^4.0.8",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^10.0.6",
    "globals": "^16.5.0",
    "playwright": "^1.56.1",
    "storybook": "^10.0.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  }
}